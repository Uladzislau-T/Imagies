@{
    ViewData["Title"] = "Home Page";
}

<div id="slider" class="carousel slide mb-5" data-ride="carousel">
    <ol class="carousel-indicators">
        <li class="active" data-target="#slider" data-slide-to="0"></li>
        <li data-target="#slider" data-slide-to="1"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block img-fluid" src="~/img/thumb-1920-1151027.jpg" alt="First Slide">
            
            <div class="carousel-caption d-none d-md-block text-right mb-5 pb-5">
                <h1 class="h1">WORLD OF 2042</h1>
                <p class="h5">Want to see the massive-scale fights of Battlefield 2042 in action?</p>
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("ProductPage", "Search")" class="btn btn-danger btn-lg">Pre-Order</a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Authentication")" class="btn btn-danger btn-lg">Pre-Order</a>
                }
            </div>
            
        </div>
        <div class="carousel-item">
            <img class="d-block img-fluid" src="~/img/A-Total-War-Saga-Troy-Recensione-apertur.jpg" alt="Second Slide">
            
            <div class="carousel-caption d-none d-md-block text-left mb-4 mb-5">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="@Url.Action("ProductPage", "Search")" class="btn btn-warning btn-lg mb-5">Purchase Now</a>
                }
                else
                {
                    <a href="@Url.Action("Index", "Authentication")" class="btn btn-warning btn-lg mb-5">Purchase Now</a>
                }
            </div>            
        </div>
    </div>
    <a href="#slider" class="carousel-control-prev" data-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </a>

    <a href="#slider" class="carousel-control-next" data-slide="next">
        <span class="carousel-control-next-icon"></span>
    </a>
    
</div>

<section class="py-5">
    <div class="container-fluid">
        <div class="row home-icons" style="align-self:center">
            <div class="mb-4 text-center home-icon">
                <i class="fas fa-comment-dots fa-3x mb-2"></i>
                <h3>Client Service</h3>
                <p>
                    Support 24 hours a day
                </p>
            </div>
            <div class=" mb-4 text-center home-icon">
                <i class="fas fa-user-shield fa-3x mb-2"></i>
                <h3>Quality Assurance</h3>
                <p>
                    We sell only original games
                </p>
            </div>
            <div class=" mb-4 text-center home-icon">
                <i class="far fa-smile fa-3x mb-2"></i>
                <h3>Money Return</h3>
                <p>
                    Back Guarantee in 7 days
                </p>
            </div>
            <div class=" mb-4 text-center home-icon">
                <i class="fas fa-dollar-sign fa-3x mb-2"></i>
                <h3>Member Discount</h3>
                <p>
                    On every order over $10.00
                </p>
            </div>
        </div>
    </div>
</section>

<h1 class="h3" style="margin-left:130px; margin-bottom: 15px;">Recently Uploaded</h1>
<div class="container rec-up-cells mb-5">
    @{ int i = 0;
       var url = Context.Request.Path;
        @foreach (var product in Model)
        {
    <div class="rec-up-game-cell">
        <a href="" class="@Url.Action("ProductPage", "Search")"><img src="~/img/Cards/@product.CardPath" alt=""></a>
        <div class="text-truncate">@product.Title</div>
        <div class="text-truncate rec-up-game-cell-Author">@product.Author</div>
        <div class="rec-up-game-cell-Price">@product.Price.ToString("c")</div>
        <form asp-action="AddItemFromSearchPage" asp-controller="Order" method="post"
              asp-route-returnUrl="@url">
            <input type="hidden" name="productId" value="@product.Id" />
            <button class="rec-up-game-cell-btn" type="submit">To Cart</button>
        </form>
    </div>
            if (i == 4)
                break;
            i++;
        }
    }
</div>

<section class="home-heading p-5">
    <div class="dark-overlay">
        <div class="">
            <div class="">
                <div class="container adv">
                    <h1>Are You Ready To Get Started?</h1>
                    <p class="d-none d-md-block">
                        Check out the comprehensive list of the latest games and bonuses on offer from MegaStore.
                        Forget your problems with our games as solutions!
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<h5 class="pb-5 pt-5" style="margin-left: 150px;">MegaStore Games Catalog</h5>

<section class="container brows-cat">
    <a href="@Url.Action("Index", "Search")" class="brows-cat-link"><img class="brows-cat-pic" src="~/img/brows-cat.png" alt="First Slide"/></a>
    <div class="explore">
        <p class="browse">Browse</p>
        <p class="explore-words">Explore our catalog for your next favorite game!</p>
        <a href="@Url.Action("Index", "Search")" class="btn btn-light btn-lg mt-4">Learn More</a>

    </div>
</section>

<script>
    $(".carousel").carousel({
        interval: 6000,
        pause: "hover",
    });
</script>