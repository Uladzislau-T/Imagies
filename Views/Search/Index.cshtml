@model ProductModel

<div class="container mt-5 pt-5">
    <div class="sort-filter">
        <div class="dropdown">
            <button class="dropbtn">Sort: @Model.SortMethod<i class="arrow"></i></button>
            <div class="dropdown-content">
                <a asp-action="FilterProducts" asp-controller="Search" asp-route-SortOrder="Relevance">Relevance</a>
                <a asp-action="FilterProducts" asp-controller="Search" asp-route-SortOrder="Alphabetically">Alphabetically</a>
                <a asp-action="FilterProducts" asp-controller="Search" asp-route-SortOrder="PriceAsc">Price: Low to High</a>
                <a asp-action="FilterProducts" asp-controller="Search" asp-route-SortOrder="PriceDesc">Price: High to Low</a>
            </div>
        </div>
    </div>

    <div class="search-page">

        <div class="game-cells">
            @{ var url = Context.Request.Path;}

                @foreach (var product in Model.Products)
                {
                    <div class="game-cell">
                        <a href="@Url.Action("ProductPage", "Search")" class=""><img src="~/img/Cards/@product.CardPath" alt=""></a>
                        <div class="text-truncate">@product.Title</div>
                        <div class="text-truncate game-cell-Author">@product.Author</div>
                        <div class="game-cell-Price">@product.Price.ToString("c")</div>
                        <form asp-action="AddItemFromSearchPage" asp-controller="Order" method="post"
                              asp-route-returnUrl="@url">
                            <input type="hidden" name="productId" value="@product.Id" />
                            <button class="game-cell-btn" type="submit">To Cart</button>
                        </form>
                    </div>                
                }
        </div>

        <div class="productCat">
            <div class="filter">Filter</div>
            <vc:categories-menu />
        </div>
    </div>

    <div class="pagination mt-5">
        <a asp-action="FilterProducts" asp-controller="Search" asp-route-PageNumber="@(Model.CurrentPage - 1)">&laquo;</a>
        @{ int totalPages = (int)Math.Ceiling((double)Model.TotalItems / 24);

            @for (int i = 1; i <= totalPages; i++)
            {
                if (Model.CurrentPage <= 5 && i == 1)
                {
                <a asp-action="FilterProducts" asp-controller="Search" asp-route-PageNumber="1" data-page="1">1</a>
                }
                if (totalPages <= 5)
                {
                    if(i == 1) { continue; }
                    <a asp-action="FilterProducts" asp-controller="Search" asp-route-PageNumber="@i" data-page="@i">@i</a>
                }
                else
                {
                    if (Model.CurrentPage <= 5)
                    {
                        if (i == 1) { continue; }
                        if (i <= 5)
                        {
                            <a asp-action="FilterProducts" asp-controller="Search" asp-route-PageNumber="@i" data-page="@i">@i</a>
                            if (i == 5)
                            {
                                <p style="padding-top:9px;">...</p>
                            }
                        }
                        else
                        {
                            break;
                        }
                    }
                    else
                    {
                        if (i >= Model.CurrentPage && i <= Model.CurrentPage + 5)
                        {
                            if (i == Model.CurrentPage)
                            {
                                <p style="padding-top:9px;">...</p>
                            }
                            <a asp-action="FilterProducts" asp-controller="Search" asp-route-PageNumber="@i" data-page="@i">@i</a>
                        }
                        else
                        {
                            continue;
                        }
                    }
                }
            }
        }
        <a asp-action="FilterProducts" asp-controller="Search" asp-route-PageNumber="@(Model.CurrentPage + 1)">&raquo;</a>
    </div>
</div>


